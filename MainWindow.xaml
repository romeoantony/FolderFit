<Window
    x:Class="FolderFit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControls="clr-namespace:FolderFit.View.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FolderFit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1000"
    Height="600"
    MinWidth="700"
    MinHeight="400"
    Background="#252529"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <!--  Custom RadioButton style for dark backgrounds  -->
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontFamily" Value="Dubai" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Grid
                                Width="18"
                                Height="18"
                                Margin="0,0,6,0"
                                VerticalAlignment="Center">
                                <Ellipse
                                    x:Name="Outer"
                                    Fill="Transparent"
                                    Stroke="White"
                                    StrokeThickness="2" />
                                <Ellipse
                                    x:Name="Inner"
                                    Width="10"
                                    Height="10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Fill="#FFD700"
                                    Visibility="Collapsed" />
                            </Grid>
                            <ContentPresenter VerticalAlignment="Center" RecognizesAccessKey="True" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Inner" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Outer" Property="Stroke" Value="Gray" />
                                <Setter TargetName="Inner" Property="Fill" Value="Gray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Custom CheckBox style for dark backgrounds  -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontFamily" Value="Dubai" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Grid
                                Width="18"
                                Height="18"
                                Margin="0,0,6,0"
                                VerticalAlignment="Center">
                                <Rectangle
                                    x:Name="Box"
                                    Width="16"
                                    Height="16"
                                    Fill="Transparent"
                                    RadiusX="3"
                                    RadiusY="3"
                                    Stroke="White"
                                    StrokeThickness="2" />
                                <Path
                                    x:Name="CheckMark"
                                    Data="M 4 9 L 8 13 L 14 5"
                                    Stroke="#FFD700"
                                    StrokeEndLineCap="Round"
                                    StrokeStartLineCap="Round"
                                    StrokeThickness="3"
                                    Visibility="Collapsed" />
                            </Grid>
                            <ContentPresenter VerticalAlignment="Center" RecognizesAccessKey="True" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Box" Property="Stroke" Value="Gray" />
                                <Setter TargetName="CheckMark" Property="Stroke" Value="Gray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <UserControls:MenuBar
            x:Name="menuBar"
            Grid.Row="0"
            FontSize="18" />

        <DockPanel
            x:Name="folderPathPanel"
            Grid.Row="1"
            Margin="10,0,10,0"
            HorizontalAlignment="Stretch">
            <Label
                VerticalAlignment="Center"
                Content="Folder:"
                FontFamily="Dubai"
                FontSize="18"
                Foreground="White" />
            <UserControls:PathSelector
                x:Name="folderPathUC"
                Height="40"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                FontFamily="Dubai"
                FontSize="18"
                Placeholder="Enter Folder Path" />
        </DockPanel>

        <DockPanel
            x:Name="sortByPanel"
            Grid.Row="2"
            Margin="10,0,10,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center">
            <Label
                x:Name="label"
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Sort by:"
                FontFamily="Dubai"
                FontSize="18"
                Foreground="White" />
            <RadioButton
                x:Name="sortByTypeRadioButton"
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Background="Transparent"
                Checked="sortByTypeRadioButton_Checked"
                Content="Type"
                FontFamily="Dubai"
                FontSize="18"
                Foreground="White" />
            <RadioButton
                x:Name="sortByDateRadioButton"
                Grid.Row="1"
                Margin="5,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Background="Transparent"
                Checked="sortByDateRadioButton_Checked"
                Content="Date"
                FontFamily="Dubai"
                FontSize="18"
                Foreground="White" />
            <Button
                x:Name="btnStart"
                Width="100"
                Height="30"
                Margin="10,0,10,0"
                Padding="0"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#7ee07e"
                Click="btnStart_Click"
                Content="Start"
                FontFamily="Dubai"
                FontSize="18"
                FontWeight="Bold"
                Foreground="Black" />
            <CheckBox
                x:Name="openFolderCheckBox"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                VerticalContentAlignment="Center"
                Background="Transparent"
                Content="Open sorted folder?"
                FontSize="18"
                Foreground="White"
                IsChecked="True" />
        </DockPanel>

        <DockPanel x:Name="folderListPanel" Grid.Row="3">
            <Border
                Margin="10,0,10,0"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="5">
                <ScrollViewer
                    x:Name="scrollViewer"
                    Background="Transparent"
                    Foreground="White"
                    VerticalScrollBarVisibility="Auto">
                    <TextBlock
                        x:Name="logViewer"
                        Padding="5"
                        FontSize="18"
                        Foreground="White"
                        Text="{Binding LogData}" />
                </ScrollViewer>
            </Border>
        </DockPanel>

        <DockPanel x:Name="progressPanel" Grid.Row="5">
            <Label
                x:Name="statusLabel"
                Margin="10,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Panel.ZIndex="1000"
                Background="Transparent"
                Content="Progress"
                FontFamily="Dubai"
                FontSize="18"
                Foreground="White" />
            <Border
                Height="30"
                Margin="10,0,10,0"
                BorderBrush="Gray"
                BorderThickness="1">
                <ProgressBar
                    x:Name="progressBar"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="#131313"
                    BorderThickness="0" />
            </Border>
        </DockPanel>
    </Grid>
</Window>
